<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="efestoarts.fallingwords.PlayActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:padding="7dp"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/game_stats"
            android:textSize="@dimen/primary_text_size"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5/10"
            />

        <TextView android:id="@+id/right_words_counter"
            android:textSize="@dimen/primary_text_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:text="3"
            />

        <TextView android:id="@+id/wrong_words_counter"
            android:textSize="@dimen/primary_text_size"
            android:layout_toLeftOf="@id/right_words_counter"
            android:layout_toStartOf="@id/right_words_counter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="6"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_text"
            android:textSize="@dimen/primary_text_size"
            android:layout_centerInParent="true"
            android:text="This is a word"/>

        <LinearLayout
            android:id="@+id/buttons_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/wrong_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="That's wrong!" />


            <Button
                android:id="@+id/right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="That's Right!" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/translation_text"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="@dimen/primary_text_size"
            android:background="@color/colorAccent"
            android:layout_above="@id/buttons_panel"
            android:text='"Questa Ã¨ una parola"'
            />
    </RelativeLayout>

</FrameLayout>
